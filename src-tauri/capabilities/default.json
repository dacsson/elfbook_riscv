{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:default",
    "opener:default",
    "dialog:default",
    "fs:allow-home-write",
    "fs:allow-home-write-recursive",
    "fs:allow-open",
    "fs:allow-write",
    "fs:allow-read",
    "fs:allow-rename",
    {
      "identifier":"fs:allow-mkdir",
      "allow": ["$HOME/**"]
    }
  ]
}